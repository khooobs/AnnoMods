	<!-- TRIGGERS -->
	<ModOp Type="addNextSibling"
	       GUID="130253">
		<Asset>
			<Template>Trigger</Template>
			<Values>
				<Standard>
					<GUID>2077040102</GUID>
					<Name>Unlock Steam Train</Name>
				</Standard>
				<Trigger>
					<TriggerCondition>
						<Template>ConditionAlwaysTrue</Template>
					</TriggerCondition>
					<TriggerActions>
