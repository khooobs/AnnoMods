		<Asset>
			<Template>TrafficFeedbackUnit</Template>
			<Values>
				<Standard>
					<GUID>2077040012</GUID>
					<Name>Steam Train II</Name>
					<IconFilename>data\ui\2kimages\main\3dicons\jdg\icon_train_steam_01.png</IconFilename>
				</Standard>
				<TrafficFeedbackUnit>
					<UnitType>Train</UnitType>
					<CfgPath>data\modgraphics\jdg\vehicle\railway\railway_steam_01.cfg</CfgPath>
					<SpeedSource>Managed</SpeedSource>
				</TrafficFeedbackUnit>
				<Trailer>
					<TrailerType>TrainStatic</TrailerType>
					<TrailerCount>6</TrailerCount>
					<TrailerMiddlePartCfgVariations>
						<Item>
							<CfgVariation>data\modgraphics\jdg\vehicle\railway\railway_tourism_02.cfg</CfgVariation>
							<RelativeProbability>100</RelativeProbability>
						</Item>
